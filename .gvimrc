" turn off visual bell
set vb t_vb=
" turn off buffers menu;
let no_buffers_menu = 1
" system menu is not sourced;
set guioptions+=M
" disable menu bar
set guioptions-=m
" disable grey menu items
set guioptions-=g
" disable tear off menus
set guioptions-=t
" disable toolbar
set guioptions-=T
" disable righ hand scroll bar
set guioptions-=r
" disable righ hand scroll bar
set guioptions-=R
" disable left hand scroll bar
set guioptions-=L
" disable left hand scroll bar
set guioptions-=l
" disable bottom scroll bar
set guioptions-=b
" disable horizontal scroll bar
set guioptions-=h
" set the font
set guifont=Bitstream_Vera_Sans_Mono:h10:cANSI
